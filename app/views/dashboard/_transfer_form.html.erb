<%= form_with url: transfers_path, local: true do |f| %>
  <div class="form-group mb-4">
    <%= f.label :amount, 'Amount (MYR)' %>
    <%= f.number_field :amount, step: 0.01, required: true, class: 'form-control'%>
  </div>
  <div class="form-group mb-4">
    <%= f.label :wallet, 'To account' %>
    <%= f.number_field :wallet_id, required: true, class: 'form-control', placeholder: 'Wallet ID' %>
  </div>
  <%= f.submit 'Transfer', class: 'btn btn-primary float-right' %>
<% end %>